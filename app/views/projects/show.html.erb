<div class="container-layout">
  <div class="navbar-menu">
    <%= render 'shared/navbar_menu' %>
  </div>
  <div class="container-main">
    <h1>
      <%= @project.name %>
      <span class="button-link button-edit">
        <%= link_to edit_project_path(@project) do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </span>
    </h1>
    <div class="container-section">
      <p class="text-project-description"><%= @project.description %></p>
    </div>
    <h2>Project tickets
      <% unless @tickets.empty? %>
        <span class="button-link button-edit">
        <%= link_to new_ticket_path do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </span>
      <% end %>
    </h2>
    <% if @tickets.empty? %>
      <%= link_to "Add a new ticket", new_ticket_path, class: "link-nav" %>
    <% else %>
      <ul>
        <% @tickets.each do |ticket| %>
          <li class="container-clickable">
            <%= link_to ticket_path(ticket) do %>
              <h3 class="text-caps">
                <%= ticket.title %>
              </h3>
              <p> <%= ticket.description %> </p>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
